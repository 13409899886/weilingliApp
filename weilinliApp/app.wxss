/* 图片添加样式 */
.lv__input-box{
  position: relative; 
  width: 77px;
  height: 77px;
  border: 1px solid #d9d9d9;
}
.lv__input-box::before,.lv__input-box::after{
  content: " ";
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%,-50%);
  transform: translate(-50%,-50%);
  background-color: #d9d9d9;
}
.lv__input-box:before {
  width: 2px;
  height: 39.5px;
}
.lv__input-box:after{
  width: 39.5px;
  height: 2px;
}
