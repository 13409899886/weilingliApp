.section{
  position:relative;
  display: -webkit-flex;
  padding:24rpx 0
}
.picker{
  color: #999;
}
.lv_pickers{
  width: 410rpx;
  color: #999;
  font-size: 30rpx
}

/********* 箭头 *********/
.lv_jiantou{
  height: 16rpx;
  width: 16rpx;
  border-width: 4rpx 4rpx 0  0;
  border-color: #999;
  border-style: solid;
  -webkit-transform: matrix(.71, .71, -.71, .71, 0, 0);
  transform: matrix(.71, .71, -.71, .71, 0, 0);
  position: relative;
  top: 10rpx
}

/********* 生成边框线 *********/
.lv_border_bottom::after, .lv_border_top::before{
  content: " ";
  position: absolute;
  left: 0;
  right: 0;
  height: 2rpx;
  color: #d9d9d9
}
/* border_top */
.lv_border_top::before{
  top: 0;
  border-top: 2rpx solid #d9d9d9;
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-transform: scaleY(.5);
  transform: scaleY(.5)
 }
/* border_bottom */
.lv_border_bottom::after{
  bottom: 0;
  border-bottom: 2rpx solid #d9d9d9;
  -webkit-transform-origin: 0 100%;
  transform-origin: 0 100%;
  -webkit-transform: scaleY(.5);
  transform: scaleY(.5)
}

