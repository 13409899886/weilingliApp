<!--pages/tzxx/tzxx.wxml-->
<view>
  <view class="lv_banner" style="{{url}}ba.jpg{{cover}}"></view>
  <view class="swiper-tab">
    <view class="lv_border_bottom swiper-tab-item {{currentTab==0?'active':''}}" data-current="0" bindtap="clickTab">全市动态</view>
    <view class="lv_border_bottom swiper-tab-item {{currentTab==1?'active':''}}" data-current="1" bindtap="clickTab">全区动态</view>
    <view class="lv_border_bottom swiper-tab-item {{currentTab==2?'active':''}}" data-current="2" bindtap="clickTab">街道动态</view>
    <view class="lv_border_bottom swiper-tab-item {{currentTab==3?'active':''}}" data-current="3" bindtap="clickTab">社区动态</view>
  </view>
  <swiper current="{{currentTab}}" duration="300"  bindchange="swiperTab">
    <swiper-item ><view>全市动态</view></swiper-item>
    <swiper-item>
      <view class="lv-tzxx-flex-box">
       <navigator>
         <view class="lv-lefts">
            <view class="lv-left-text">全市大力推广微邻里，全区铺开规定动作</view>
            <view class="left-text-time">2018-08-01</view>
          </view>
          <view class="lv_ulbj_r lv-ridhts" style="{{url}}ba.jpg{{cover}}"></view>
       </navigator>
      </view>
    </swiper-item>
    <swiper-item><view>街道动态</view></swiper-item>
    <swiper-item><view>社区动态</view></swiper-item>
  </swiper>
</view>
